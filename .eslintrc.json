{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [ "airbnb" ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {

        "camelcase": [
          "error",
          { "properties": "never" }
        ],
        "no-console": [
          "error",
          { "allow": [ "warn", "error" ] }
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "react/jsx-filename-extension": [ 0 ],
        "import/no-extraneous-dependencies": [ 0 ],
        "no-plusplus": [ 0 ],
        "class-methods-use-this": [ 0 ],
        "react/prefer-stateless-function": [ 0 ]
    }
}